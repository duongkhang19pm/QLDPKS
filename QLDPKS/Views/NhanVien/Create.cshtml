@model QLDPKS.Models.NhanVien

@{
    ViewBag.Title = "Thêm Nhân Viên";
}
<div class="card mt-2">
    <div class="breadcrumb_section bg_gray page-title-mini">
        <div class="container-fluid">
            <div class="row align-items-center">

                <ol class="breadcrumb align-content-md-end">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Home</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Index")">Danh Sách</a></li>
                    <li class="breadcrumb-item active">@ViewBag.Title</li>
                </ol>

            </div>
        </div>
    </div>
    <div class="card-body">
        @using (Html.BeginForm("Create", "NhanVien", FormMethod.Post, new { enctype = "multipart/form-data" }))

        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.HinhAnhNV)
            <form>
                <div class="form-row">
                    <div class="form-group col-md-4">
                        @Html.LabelFor(model => model.HoVaTenNV)
                        @Html.EditorFor(model => model.HoVaTenNV, new { htmlAttributes = new { @class = "form-control shadow-none col-md-12", @autocomplete = "off", @placeholder = "Nhập họ tên nhân viên" } })
                        @Html.ValidationMessageFor(model => model.HoVaTenNV, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group col-md-4">
                        @Html.LabelFor(model => model.SDT)
                        @Html.EditorFor(model => model.SDT, new { htmlAttributes = new { @class = "form-control shadow-none col-md-12", @autocomplete = "off", @placeholder = "Nhập số điện thoại" } })
                        @Html.ValidationMessageFor(model => model.SDT, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group col-md-4">
                        @Html.LabelFor(model => model.DiaChi)
                        @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control shadow-none col-md-12", @autocomplete = "off", @placeholder = "Nhập địa chỉ" } })
                        @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
                    </div>

                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        @Html.LabelFor(model => model.CMND)
                        @Html.EditorFor(model => model.CMND, new { htmlAttributes = new { @class = "form-control shadow-none col-md-12", @autocomplete = "off", @placeholder = "Nhập CMND" } })
                        @Html.ValidationMessageFor(model => model.CMND, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group col-md-6">
                        @Html.LabelFor(model => model.Email)
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control shadow-none col-md-12", @autocomplete = "off", @placeholder = "Nhập Email" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-4">
                        @Html.LabelFor(model => model.TenDangNhap)
                        @Html.EditorFor(model => model.TenDangNhap, new { htmlAttributes = new { @class = "form-control shadow-none col-md-12", @autocomplete = "off", @placeholder = "Nhập tên đăng nhập" } })
                        @Html.ValidationMessageFor(model => model.TenDangNhap, "", new { @class = "text-danger" })
                    </div>


                    <div class="form-group col-md-4">
                        @Html.LabelFor(model => model.MatKhau)
                        @Html.EditorFor(model => model.MatKhau, new { htmlAttributes = new { @class = "form-control shadow-none col-md-12", @autocomplete = "off", @placeholder = "Nhập mật khẩu" } })
                        @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group col-md-4">
                        @Html.LabelFor(model => model.XacNhanMatKhau)
                        @Html.EditorFor(model => model.XacNhanMatKhau, new { htmlAttributes = new { @class = "form-control shadow-none col-md-12", @autocomplete = "off", @placeholder = "Nhập lại mật khẩu" } })
                        @Html.ValidationMessageFor(model => model.XacNhanMatKhau, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        @Html.LabelFor(model => model.Quyen)
                        <div class="checkbox">
                            @Html.DropDownListFor(model => model.Quyen, new SelectList(new[] {
                                new SelectListItem {Value =null, Text="--Chọn Quyền--"},
                                new SelectListItem {Value ="True", Text="Quản Lý"},
                                new SelectListItem {Value ="False", Text="Nhân Viên"}
                                  }, "value", "text"), new { @class = "form-control col-md-12 text-center" })
                            @Html.ValidationMessageFor(model => model.Quyen, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group col-md-6">
                        @Html.LabelFor(model => model.DuLieuHinhAnhNV)
                        @Html.TextBoxFor(model => model.DuLieuHinhAnhNV, new { @class = "form-control-file", type = "file" })
                        @Html.ValidationMessageFor(model => model.DuLieuHinhAnhNV, "", new { @class = "text-danger" })
                        @if (!String.IsNullOrEmpty(ViewData.ModelState["UploadError"].Errors[0].ErrorMessage))
                        {
                            <span class="d-block text-danger">@ViewData.ModelState["UploadError"].Errors[0].ErrorMessage</span>
                        }
                    </div>
                </div>

                <div class="form-group mb-0 ">
                    <button type="submit" class="btn btn-outline-dark"><i class="fas fa-plus"></i> Thêm mới</button>
                </div>
            </form>
        }
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
