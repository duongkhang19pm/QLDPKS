@model IEnumerable<QLDPKS.Models.Phong>

@{
    ViewBag.Title = "Danh Sách Phòng";
}
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.2/css/jquery.dataTables.css">

<div class="card mt-3">
    <div class="breadcrumb_section bg_gray page-title-mini">
        <div class="container-fluid">
            <div class="row align-items-center">

                <ol class="breadcrumb align-content-md-end">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Home</a></li>

                    <li class="breadcrumb-item active">@ViewBag.Title</li>
                </ol>

            </div>
        </div>
    </div>
    <div class="card-body">
        <p><a class="btn btn-outline-dark" href="@Url.Action("Create")" role="button"><i class="fas fa-plus"></i> Thêm mới</a></p>
        <table id="PhanTrang" class="table table-bordered table-hover table-sm mb-0">
            <thead>
                <tr>
                    <th width="5%">#</th>
                    <th>
                        @Html.DisplayNameFor(model => model.TenPhong)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Gia)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SLNguoi)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.HinhAnhBia)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DTPhong)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.TrangThai)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LoaiPhong.TenLoai)
                    </th>
                    <th width="20%"></th>

                </tr>
            </thead>
            <tbody>
                @{ int stt = 1; }
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@stt</td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TenPhong)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Gia)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SLNguoi)
                        </td>
                        <td class="text-center">
                            <img src="~/@item.HinhAnhBia" width="130" height="100" class="img-thumbnail" />
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DTPhong)
                        </td>

                        <td class="text-center">
                            @if (item.TrangThai == 1)
                            {
                                <a href="@Url.Action("Approved", new { id = item.ID })"> <i class="fas fa-toggle-on fa-2x text-green "></i></a>
                            }
                            else
                            {
                                <a href="@Url.Action("Approved", new { id = item.ID })"><i class="fas fa-toggle-off fa-2x text-danger "></i></a>
                            }
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LoaiPhong.TenLoai)
                        </td>
                        <td class=" text-center">
                            <a href="@Url.Action("ChiTiet", new { id = item.ID })" class="btn btn-outline-primary btn-sm"><i class="fas fa-folder"></i>View</a>
                            <a href="@Url.Action("Edit", new { id = item.ID })" class="btn btn-outline-info btn-sm"><i class="fas fa-pencil-alt"></i>Edit</a>
                            <a href="@Url.Action("Delete", new { id = item.ID })" class="btn btn-outline-danger btn-sm"><i class="fas fa-trash"></i>Delete</a>
                        </td>

                    </tr>
                    stt++;
                }
            </tbody>
        </table>
    </div>
</div>
@section Scripts{
    <script>
        $(document).ready(function () {
            $('#PhanTrang').DataTable({
                "language": {
                    "lengthMenu": "Số dòng _MENU_  trên trang ",
                    "zeroRecords": "Không tìm thấy!!!",
                    "info": "Trang  _PAGE_ của _PAGES_",
                    "infoEmpty": "Không có sẵn dữ liệu",
                    "infoFiltered": "(được lọc từ tổng _MAX_  dữ liệu)"


                }
            });
        });
    </script>
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.11.2/js/jquery.dataTables.js"></script>

}