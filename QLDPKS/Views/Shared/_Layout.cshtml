<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Victoria Hotel</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="icon" href="~/Images/logo.jpg">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/Areas/Admin/dist/css/adminlte.min.css">


</head>
<body class="pt-0">
    <div class="container-fluid ">

        <nav class="navbar navbar-expand-lg navbar-light " style=" background: #c65151;">

            <div class="container-fluid">
                <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                    <img src="~/Images/logo.jpg" alt="" width="30" height="30" class="d-inline-block align-text-top">
                    Victoria Hotel
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul>
                    </ul>
                    <ul class="navbar-nav">
                        <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                            <li><a class="dropdown-item" href="@Url.Action("TinTuc", "Home")">Các Hành Trình</a></li>

                        </ul>

                        @if (Session["MaKhachHang"] == null)
                        {
                            <li class="nav-item">
                                <a class="nav-link " href="@Url.Action("Login", "Home")"><i class="fas fa-sign-in-alt"></i>Đăng nhập</a>
                            </li>
                        }
                        else
                        {


                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDarkDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-user-circle"></i>
                                    @Session["HoTenKhachHang"].ToString()
                                </a>
                                <div class="dropdown-menu dropdown-menu" aria-labelledby="navbarDarkDropdownMenuLink">
                                    <a class="dropdown-item" href="@Url.Action("ThongTinKH","Home",new {id = Session["MaKhachHang"]})"> <i class="fas fa-info-circle mr-1"></i>Thông tin cá nhân</a>

                                    <a class="dropdown-item" href="@Url.Action("Logout", "Home")"><i class="fas fa-sign-out-alt mr-1"></i> Đăng xuất</a>
                                </div>
                            </li>


                        }
                        <li class="nav-item" href="@Url.Action("Index", "Home")">
                            <img src="~/Images/vi.png" class="d-inline-block align-bottom " alt="" width="20" />
                            <img src="~/Images/eng.png" class="d-inline-block align-bottom " alt="" width="20" />
                        </li>
                    </ul>

                </div>
            </div>
        </nav>
        @if (TempData["AlertMessage"] != null)
        {
            <div id="AlertBox" class="alert @TempData["AlertType"] hide">
                @TempData["AlertMessage"]
            </div>
        }
        <section class="content">
            <div class="container-fluid ">

                @RenderBody()
            </div>
            <!-- /.container-fluid -->


        </section>

        <footer class="page-footer font-small unique-color-dark ">
            <div style=" background: #c65151;">
                <div class="container">
                    <div class="row py-4 d-flex align-items-center">
                        <div class="col-md-6 col-lg-5 text-center text-md-left mb-4 mb-md-0">
                        </div>
                        <div class="col-md-6 col-lg-7 text-center text-md-right ">
                            <a class="fb-ic">
                                <i class="fab fa-facebook-square white-text mr-4 fa-lg " style="color:#ffffff"> </i>
                            </a>
                            <a class="tw-ic">
                                <i class="fab fa-twitter white-text mr-4 fa-lg" style="color:#ffffff"> </i>
                            </a>
                            <a class="gplus-ic">
                                <i class="fab fa-google-plus-g white-text mr-4 fa-lg" style="color:#ffffff"> </i>
                            </a>
                            <a class="li-ic">
                                <i class="fab fa-linkedin-in white-text mr-4 fa-lg" style="color:#ffffff"> </i>
                            </a>
                            <a class="ins-ic">
                                <i class="fab fa-instagram white-text fa-lg" style="color:#ffffff"> </i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="container text-center text-md-left mt-2">

                <div class="col-md-auto mt-5" style="text-align:center">
                    <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                        <img src="~/Images/logo.jpg" alt="" width="30" height="30" class="d-inline-block align-text-top">
                        Victoria Hotel
                    </a>
                    <h6 class="mb-0 text-light text-dark text-center">
                        Copyright &copy; 2020 - @DateTime.Now.ToString("yyyy") - được thiết kế bởi nhóm (Khang - Trâm - Trang)
                    </h6>
                </div>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")

    @RenderSection("scripts", required: false)



    <!-- AdminLTE App -->
    <script src="~/Areas/Admin/dist/js/adminlte.js"></script>
    <script src="~/Scripts/ThongBao.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.min.js" integrity="sha384-skAcpIdS7UcVUC05LJ9Dxay8AXcDYfBJqt1CJ85S/CFujBsIzCIv+l9liuYLaMQ/" crossorigin="anonymous"></script>
</body>
</html>
