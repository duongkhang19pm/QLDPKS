@model QLDPKS.Models.NhanVienLogin
@{
    ViewBag.Title = "Đăng Nhập Quản Trị";
}
<div class="breadcrumb_section bg_gray page-title-mini">
    <div class="container-fluid">
        <div class="row align-items-center">

            <ol class="breadcrumb align-content-md-end">
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Home</a></li>
                <li class="breadcrumb-item active">Login</li>
            </ol>

        </div>
    </div>
</div>
<div class="card mb-3 mt-3 " style="max-width: 350px;margin: auto;top: 50%;left: 0;right: 0">

    <h5 class="card-header">@ViewBag.Title</h5>
    <div class="card-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            if (!String.IsNullOrEmpty(ViewData.ModelState["LoginError"].Errors[0].ErrorMessage))
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <span class="d-block text-dark">@ViewData.ModelState["LoginError"].Errors[0].ErrorMessage</span>
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }
            <form>
                <div class="form-group">
                    @Html.LabelFor(model => model.TenDangNhap)
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-addon1"><i class="fas fa-user"></i></span>
                        </div>
                        @Html.EditorFor(model => model.TenDangNhap, new { htmlAttributes = new { @class = "form-control shadow-none ", @autocomplete = "off", @placeholder = "Nhập tên đăng nhập" } })
                        @Html.ValidationMessageFor(model => model.TenDangNhap, "", new { @class = "invalid-feedback" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.MatKhau)
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-addon1"><i class="fas fa-lock"></i></span>
                        </div>
                        @Html.EditorFor(model => model.MatKhau, new { htmlAttributes = new { @class = "form-control shadow-none ", @autocomplete = "off", @placeholder = "Nhập mật khẩu" } })
                        @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "invalid-feedback" })
                    </div>
                </div>


                <div class="form-group mb-0">
                    <input type="submit" value="Đăng nhập" class="btn btn-secondary " /> hoặc @Html.ActionLink("Quay về trang chủ", "Index", "Home")
                </div>
            </form>
        }
    </div>


</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

