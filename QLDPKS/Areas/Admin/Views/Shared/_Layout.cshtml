<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Victoria Hotel</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="icon" href="~/Images/logo.jpg">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css">
    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/Areas/Admin/plugins/fontawesome-free/css/all.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- Tempusdominus Bootstrap 4 -->
    <link rel="stylesheet" href="~/Areas/Admin/plugins/tempusdominus-bootstrap-4/css/tempusdominus-bootstrap-4.min.css">
    <!-- iCheck -->
    <link rel="stylesheet" href="~/Areas/Admin/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <!-- JQVMap -->
    <link rel="stylesheet" href="~/Areas/Admin/plugins/jqvmap/jqvmap.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/Areas/Admin/dist/css/adminlte.min.css">
    <!-- overlayScrollbars -->
    <link rel="stylesheet" href="~/Areas/Admin/plugins/overlayScrollbars/css/OverlayScrollbars.min.css">
    <!-- Daterange picker -->
    <link rel="stylesheet" href="~/Areas/Admin/plugins/daterangepicker/daterangepicker.css">
    <!-- summernote -->
    <link rel="stylesheet" href="~/Areas/Admin/plugins/summernote/summernote-bs4.min.css">




</head>
<body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">

        <!--
         <div class="preloader flex-column justify-content-center align-items-center">
             <img class="animation__shake" src="~/Images/logo.jpg" alt="" height="60" width="60">
         </div>
        -->
        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="@Url.Action("Index","Home")" class="nav-link">Home</a>
                </li>

            </ul>

            <!-- Right navbar links -->
            <ul class="navbar-nav ml-auto">
                <!-- Navbar Search -->
                <li class="nav-item">
                    <a class="nav-link" data-widget="navbar-search" href="#" role="button">
                        <i class="fas fa-search"></i>
                    </a>
                    <div class="navbar-search-block">
                        <form class="form-inline">
                            <div class="input-group input-group-sm">
                                <input class="form-control form-control-navbar" type="search" placeholder="Search" aria-label="Search">
                                <div class="input-group-append">
                                    <button class="btn btn-navbar" type="submit">
                                        <i class="fas fa-search"></i>
                                    </button>
                                    <button class="btn btn-navbar" type="button" data-widget="navbar-search">
                                        <i class="fas fa-times"></i>
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </li>


                <li class="nav-item">
                    <a class="nav-link" data-widget="fullscreen" href="#" role="button">
                        <i class="fas fa-expand-arrows-alt"></i>
                    </a>
                </li>

            </ul>
        </nav>
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4 ">
            <!-- Brand Logo -->
            <a href="@Url.Action("Index","Home")" class="brand-link">
                <img src="~/Images/logo.jpg" alt="" class="brand-image img-circle elevation-3" style="opacity: .8 ;background:#ffffff">
                <span class="brand-text font-weight-light"> Quản Trị Victoria Hotel</span>
            </a>

            <!-- Sidebar -->
            @if (Session["MaNhanVien"] != null)
            {
                <div class="sidebar">
                    <!-- Sidebar user panel (optional) -->
                    <div class="user-panel mt-3 pb-3 mb-3 d-flex">


                        <div class="image">
                            <img src="~/@Session["HinhAnhNV"]" class="img-circle elevation-2" alt="User Image">
                        </div>

                        <div class="info text-info">
                            <a href="@Url.Action("ThongTinNV","Home",new {id = Session["MaNhanVien"]})" class="d-block"> @Session["HoTenNhanVien"].ToString()</a>
                            @if (Convert.ToInt32(Session["Quyen"]) == 1)
                            {
                                <span>(Quản lý)</span>
                            }
                            else
                            {
                                <span>(Nhân viên)</span>
                            }
                        </div>

                    </div>
                    <!-- Sidebar Menu -->
                    <nav class="mt-2">
                        <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">

                            <li class="nav-item">
                                <a href="@Url.Action("DanhSachPhong", "Home")" class="nav-link">
                                    <i class="fas fa-barcode"></i>
                                    <p>
                                        Danh Sách Phòng

                                    </p>
                                </a>

                            </li>
                            <li class="nav-item">
                                <a href="@Url.Action("DoanhThu", "PhieuDatPhong")" class="nav-link">
                                    <i class="ion ion-stats-bars"></i>
                                    <p>
                                        Doanh Thu
                                    </p>
                                </a>

                            </li>
                            <li class="nav-item">
                                <a href="#" class="nav-link">
                                    <i class="fas fa-tasks"></i>
                                    <p>
                                        Quản Lý Danh Mục
                                        <i class="fas fa-angle-left right"></i>
                                    </p>
                                </a>
                                <ul class="nav nav-treeview">
                                    @if (Convert.ToInt32(Session["Quyen"]) == 1)
                                    {
                                        <li class="nav-item">
                                            <a href="@Url.Action("Index", "LoaiPhong")" class="nav-link">
                                                <i class="fas fa-star-of-david"></i>
                                                <p>Loại Phòng</p>
                                            </a>
                                        </li>
                                        <li class="nav-item">
                                            <a href="@Url.Action("Index", "DichVu")" class="nav-link">
                                                <i class="fas fa-star-of-david"></i>
                                                <p>Dịch Vụ</p>
                                            </a>
                                        </li>
                                        <li class="nav-item">
                                            <a href="@Url.Action("Index", "TienNghi")" class="nav-link">
                                                <i class="fas fa-star-of-david"></i>
                                                <p>Tiện Nghi</p>
                                            </a>
                                        </li>

                                    }
                                    <li class="nav-item">
                                        <a href="@Url.Action("Index", "Phong")" class="nav-link">
                                            <i class="fas fa-star-of-david"></i>
                                            <p>Danh Sách Phòng</p>
                                        </a>
                                    </li>


                                </ul>
                            </li>

                            <li class="nav-item">
                                <a href="#" class="nav-link">
                                    <i class="fas fa-users"></i>
                                    <p>
                                        Quản Lý Người Dùng
                                        <i class="fas fa-angle-left right"></i>
                                    </p>
                                </a>
                                <ul class="nav nav-treeview">
                                    @if (Convert.ToInt32(Session["Quyen"]) == 1)
                                    {

                                        <li class="nav-item">
                                            <a href="@Url.Action("Index", "NhanVien")" class="nav-link">
                                                <i class="fas fa-star-of-david"></i>
                                                <p>Nhân Viên</p>
                                            </a>
                                        </li>

                                    }


                                    <li class="nav-item">
                                        <a href="@Url.Action("Index", "KhachHang")" class="nav-link">
                                            <i class="fas fa-star-of-david"></i>
                                            <p>Khách Hàng</p>
                                        </a>
                                    </li>


                                </ul>
                            </li>

                            <li class="nav-item">
                                <a href="#" class="nav-link">
                                    <i class="fas fa-mail-bulk"></i>
                                    <p>
                                        Quản Lý Bài Viết
                                        <i class="fas fa-angle-left right"></i>
                                    </p>
                                </a>
                                <ul class="nav nav-treeview">
                                    <li class="nav-item">
                                        <a href="@Url.Action("Index", "BaiViet")" class="nav-link">
                                            <i class="fas fa-star-of-david"></i>
                                            <p>Bài Viết</p>
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a href="@Url.Action("Index", "BinhLuan")" class="nav-link">
                                            <i class="fas fa-star-of-david"></i>
                                            <p>Bình Luận</p>
                                        </a>
                                    </li>
                                </ul>
                            </li>

                            <li class="nav-item">
                                <a href="#" class="nav-link">
                                    <i class="fas fa-hotel"></i>
                                    <p>
                                        Quản Lý Đặt Phòng
                                        <i class="fas fa-angle-left right"></i>
                                    </p>
                                </a>
                                <ul class="nav nav-treeview">

                                    <li class="nav-item">
                                        <a href="@Url.Action("Index", "PhieuDatPhong")" class="nav-link">
                                            <i class="fas fa-star-of-david"></i>
                                            <p>Phiếu Đặt Phòng</p>
                                        </a>
                                    </li>


                                </ul>
                            </li>

                            <li class="nav-item">
                                <a href="#" class="nav-link">
                                    <i class="fas fa-chalkboard-teacher"></i>
                                    <p>
                                        Hệ Thống
                                        <i class="fas fa-angle-left right"></i>
                                    </p>
                                </a>
                                <ul class="nav nav-treeview">

                                    <li class="nav-item">
                                        <a href="@Url.Action("DoiMatKhau", "Home")" class="nav-link">
                                            <i class="fas fa-sync-alt"></i> Thay Đổi Mật Khẩu
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a href="@Url.Action("Logout", "Home")" class="nav-link">
                                            <i class="fas fa-sign-out-alt"></i> Đăng xuất
                                        </a>
                                    </li>

                                </ul>
                            </li>


                        </ul>
                    </nav>
                    <!-- /.sidebar-menu -->
                </div>
                <!-- /.sidebar -->
            }
            else
            { <ul class="nav nav-treeview">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Login", "Home")">Đăng nhập quản lý</a>
                    </li>
                </ul>
            }
        </aside>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Main content -->
            <section class="content ">
                <div class="container-fluid">
                    @if (TempData["AlertMessage"] != null)
                    {
                        <div id="AlertBox" class="alert @TempData["AlertType"] hide">
                            @TempData["AlertMessage"]
                        </div>
                    }
                    @RenderBody()
                </div><!-- /.container-fluid -->


            </section>
            <!-- /.content -->
            <footer class="page-footer font-small unique-color-dark ">
                <div style="background-color: #808080;">
                    <div class="container">
                        <div class="row py-4 d-flex align-items-center">
                            <div class="col-md-6 col-lg-5 text-center text-md-left mb-4 mb-md-0">
                            </div>
                            <div class="col-md-6 col-lg-7 text-center text-md-right ">
                                <a class="fb-ic">
                                    <i class="fab fa-facebook-square white-text mr-4 fa-lg " style="color:#ffffff"> </i>
                                </a>
                                <a class="tw-ic">
                                    <i class="fab fa-twitter white-text mr-4 fa-lg" style="color:#ffffff"> </i>
                                </a>
                                <a class="gplus-ic">
                                    <i class="fab fa-google-plus-g white-text mr-4 fa-lg" style="color:#ffffff"> </i>
                                </a>
                                <a class="li-ic">
                                    <i class="fab fa-linkedin-in white-text mr-4 fa-lg" style="color:#ffffff"> </i>
                                </a>
                                <a class="ins-ic">
                                    <i class="fab fa-instagram white-text fa-lg" style="color:#ffffff"> </i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="container text-center text-md-left mt-2">

                    <div class="col-md-auto mt-5" style="text-align:center">
                        <a class="navbar-brand text-dark" href="@Url.Action("Index", "Home")">
                            <img src="~/Images/logo.jpg" alt="" width="30" height="30" class="d-inline-block align-text-top">
                            Victoria Hotel
                        </a>
                        <h6 class="mb-0 text-light text-dark text-center">
                            Copyright &copy; 2020 - @DateTime.Now.ToString("yyyy") - được thiết kế bởi nhóm (Khang - Trâm - Trang)
                        </h6>
                    </div>
                </div>

            </footer>
        </div>
        <!-- /.content-wrapper -->
        <!-- Control Sidebar -->
        <aside class="control-sidebar control-sidebar-dark">
            <!-- Control sidebar content goes here -->
        </aside>
        <!-- /.control-sidebar -->
    </div>

    <!-- jQuery -->
    <script src="~/Areas/Admin/plugins/jquery/jquery.min.js"></script>
    <!-- jQuery UI 1.11.4 -->
    <!-- Resolve conflict in jQuery UI tooltip with Bootstrap tooltip -->
    <!-- daterangepicker -->
    <script src="~/Areas/Admin/plugins/moment/moment.min.js"></script>
    <script src="~/Areas/Admin/plugins/daterangepicker/daterangepicker.js"></script>


    <!-- AdminLTE for demo purposes -->
    <script src="~/Areas/Admin/dist/js/demo.js"></script>


    <!-- AdminLTE App -->
    <script src="~/Areas/Admin/dist/js/adminlte.js"></script>
    <script src="~/Scripts/ThongBao.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>