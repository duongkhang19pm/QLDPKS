@model QLDPKS.Models.DichVu

@{
    ViewBag.Title = "Thêm Dịch Vụ";
}
<div class="card mt-3" style="border:1px solid #e1d8d8;height:500px">
    <div class="breadcrumb_section bg_gray page-title-mini">
        <div class="container-fluid">
            <div class="row align-items-center">

                <ol class="breadcrumb align-content-md-end">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Home</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Index")">Danh Sách</a></li>
                    <li class="breadcrumb-item active">@ViewBag.Title</li>
                </ol>

            </div>
        </div>
    </div>
    <div class="card-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-group  col-md-12">
                @Html.LabelFor(model => model.TenDichVu)
                @Html.EditorFor(model => model.TenDichVu, new { htmlAttributes = new { @class = "form-control shadow-none col-md-12 ", @autocomplete = "off", @placeholder = "Nhập dịch vụ" } })
                @Html.ValidationMessageFor(model => model.TenDichVu, "", new { @class = "text-danger" })
            </div>


            <div class="form-group mb-2">
                <button type="submit" class="btn btn-outline-dark"><i class="fas fa-plus"></i> Thêm mới</button>
            </div>
        }
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
